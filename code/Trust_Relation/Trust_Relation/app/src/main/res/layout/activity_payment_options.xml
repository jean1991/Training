<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.baptistfoundation.trust_relation.Payment_options">
    <LinearLayout
        android:id="@+id/univlogo"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="@drawable/usiu1"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView
        android:paddingTop="10dp"
        android:text="Make your payment with:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewm"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/univlogo"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/lipampsa"
        style="@style/link"
        android:drawableLeft="@mipmap/mpsapay"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:text="Pay fees using Mpesa"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignLeft="@id/lipampsa"
        android:layout_below="@id/lipampsa"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="30dp"
        android:background="#DADADC" />

    <Button
        android:id="@+id/mbank"
        style="@style/link"
        android:drawableLeft="@mipmap/mbanking"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:text="Pay via M-banking"
        android:textColor="@color/black"
        android:layout_below="@+id/divider2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <View
        android:id="@+id/mbank2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignLeft="@id/mbank"
        android:layout_below="@id/mbank"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="30dp"
        android:background="#DADADC" />
    <Button
        android:id="@+id/derogation"
        style="@style/link"
        android:drawableLeft="@mipmap/derogation"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:text="Start the negotiation of Derogation process."
        android:textColor="@color/black"
        android:layout_below="@+id/mbank"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <View
        android:id="@+id/derogation1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignLeft="@id/derogation"
        android:layout_below="@id/derogation"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="30dp"
        android:background="#DADADC" />

</RelativeLayout>
