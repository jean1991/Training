<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.baptistfoundation.trust_relation.Frontend_studentFragment">
    <LinearLayout
        android:id="@+id/univlogo"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="@drawable/usiu1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgprof"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="fitStart"
            android:src="@drawable/student"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_messages"
            android:layout_toRightOf="@+id/btn_places"
            android:layout_toEndOf="@+id/btn_places" />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/univlogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/univcalendar"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/university_calendar"
        android:text="Events" />

    <!--  Friends Button -->
    <Button
        android:id="@+id/btn_friends"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/fees"
        android:text="Fees Account"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_places"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/payments"
            android:text="Payments"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/univcalendar"
            android:layout_alignStart="@+id/univcalendar" />

        <!--  Messages Button -->

        <!--  Places Button -->

        <!--  Events Button -->




    <Button
        android:id="@+id/btn_messages"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/location"
        android:text="Loaction"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/messagesbtn"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/messages"
        android:text="Messages"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_photos"
        android:layout_alignStart="@+id/btn_photos" />

    <Button
    android:id="@+id/btn_photos"
    style="@style/DashboardButton"
    android:drawableTop="@drawable/maps"
    android:text="your Maps"
        android:layout_alignTop="@+id/btn_places"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
